<div class="container">
	<table class="table table-stripped">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
    </tr>
  </thead>
	<% @products_per_page.each do |product| %>
	<tbody>
	    <tr>
	      <th scope="row"><%= product.id %></th>
	      <td><%= product.name %></td>
	      <td><%= product.price %>$</td>
	    </tr>
	  </tbody>
	<% end %>
	<tr>
		<!-- Проверка для показа кнопок назад и впред -->
		<% if @products_per_page.first != @products.first %>
		<th scope="col"><%= link_to "Prev", cart_path(prev: @products_per_page.first.id)%></th>
		<% end %>
		<% if @products_per_page.last != @products.last %>
		<th scope="col"><%= link_to "Next",cart_path(cursor: @products_per_page.last.id) %></th>
		<% end %>
		
	</tr>
	</table>
</div>