<div class="container">
	<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Add to Cart</th>
    </tr>
  </thead>
	<% @products.each do |product| %>
	<tbody>
	    <tr>
	      <th scope="row"><%= product.id %></th>
	      <td><%= product.name %></td>
	      <td><%= product.price %>$</td>
	      <td><%= link_to 'Add' %></td>
	    </tr>
	  </tbody>
	<% end %>
	</table>
</div>