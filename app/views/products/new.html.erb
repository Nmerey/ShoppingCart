<div class="container mt-3" >
	<%= form_for @product do |form| %>
	  <div class="row">
	    <div class="col">
	      <%= form.text_field :name, class: "form-control", placeholder: "Name" %>
	    </div>
	    <div class="col">
	      <%= form.number_field :price, class: "form-control", placeholder: "Price" %>
	    </div>
	  </div>
	  <button type="submit" class="mt-3 btn btn-primary"> Add Product </button>
	<% end %>
</div>